<Page x:Class="bakery_kr.Pages.Orders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bakery_kr.Pages"
      mc:Ignorable="d" Loaded="Orders_Loaded"
      d:DesignHeight="450" d:DesignWidth="830" MinHeight="300" MinWidth="400"
      Title="Список заказов">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=1}" Name="DataGrid" Margin="0,50,0,0" HorizontalAlignment="Center" />
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Name="BtnPrintOrders" Click="BtnPrintOrders_Click"
                Content="Печать списка заказов" Width="200" Height="30" Margin="0,0,0,0"
                BorderBrush="#FF756B6B" FontFamily="Microsoft YaHei UI"
                Foreground="Black"/>
    </Grid>
</Page>
